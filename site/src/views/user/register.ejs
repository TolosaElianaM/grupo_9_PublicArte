<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('../partial/head') %>

<body class="formulario register">
    <!-- Header -->
    <%- include('../partial/header') %>

    <!-- Main -->
    <main>
        <h2>¡Crea tu cuenta!</h2>
        <form action="/users/register" enctype="multipart/form-data" method="POST">
            <div>
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" placeholder="Ingrese nombre..."
                    value=<%= locals.old && old.nombre ? old.nombre : null %>>
                <% if(locals.errors && errors.nombre){ %>
                <small class="error"> <%= errors.nombre.msg %> </small>
                <% } %>
                <small id="nombresmall"></small>
            </div>
            <div>
                <label for="apellido">Apellido</label>
                <input type="text" name="apellido" id="apellido" placeholder="Ingrese apellido..."
                    value=<%= locals.old && old.apellido ? old.apellido : null %>>
                <% if(locals.errors && errors.apellido){ %>
                <small class="error"> <%= errors.apellido.msg %> </small>
                <% } %>
                <small id="apellidosmall"></small>
            </div>
            <div>
                <label for="email">E-mail</label>
                <input type="email" name="email" id="email" placeholder="Ingrese e-mail"
                    value=<%= locals.old && old.email ? old.email : null %>>
                <% if(locals.errors && errors.email){ %>
                <small class="error"> <%= errors.email.msg %> </small>
                <% } %>
                <small id="smallemail"></small>
            </div>



            <div class="password">
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Ingrese contraseña...">
                <div class="ver" id="mostrar"> <img src="https://img.icons8.com/ios-filled/50/000000/visible--v2.png" />
                </div>
                <% if(locals.errors && errors.password){ %>
                <small class="error"> <%= errors.password.msg %> </small>
                <% } %>
                <small id="smallpass"></small>
            </div>
            <div class="password">
                <label for="password2">Confirmar contraseña</label>
                <input type="password" name="password2" id="password2" placeholder="Ingrese contraseña...">
                <div class="ver" id="mostrar2"> <img
                        src="https://img.icons8.com/ios-filled/50/000000/visible--v2.png" />
                </div>
                <% if(locals.errors && errors.password2){ %>

                <small class="error"> <%= errors.password2.msg %> </small>
                <% } %>
                <small id="smallpass2"></small>
            </div>
            <div class="user">
                <label for="role">Perfil del usuario</label>
                <span>
                    <div class="rol">
                        <input type="radio" name="role" value="3" id="client" onclick=userClient()>
                        <label for="comprador">Cliente</label>
                    </div>
                    <div>
                        <input type="radio" name="role" value="2" id="producer" onclick=userProducer()>
                        <label for="vendedor">Productor</label>
                    </div>
                </span>
                <% if(locals.errors && errors.role){ %>
                <small class="error"> <%= errors.role.msg %> </small>
                <% } %>
            </div>
            <div style='display: none;' id="brand">
                <label for="marca">Agregue un nombre para su marca (opcional)</label>
                <input type="text" name="marca" id="marca" placeholder="Ingrese nombre de marca...">
            </div>
            <div class="container">
                <div class="row">

                    <label class="selectImg" for="product-img">
                        <div class="imgHover">
                            <p class="text-center">Foto de perfil:</p>
                        </div>
                        <img id="img-preview" class="img-fluid img-thumbnail imagen-height rounded"
                            src="/img/users/default-image.png" alt="">
                    </label>
                    <div class="form-admin__box inactivo">
                        <input class="d-none" id="product-img" type="file" name="avatar"
                            placeholder="Imagen del Producto" accept=".jpg,.png,.jpeg">
                        <small id="imagensmall"></small>
                    </div>

                </div>
            </div>
            <button type="submit" id="crear">Crear cuenta</button>
        </form>

        <section>
            <h4>Ó crea tu cuenta con:</h4>
            <div>
                <button><i class="fab fa-google"></i> Google</button>
                <button><i class="fab fa-facebook"></i> Facebook</button>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <%- include('../partial/footer') %>
    <script src="/javascript/validaciones/register.js"></script>
    <script src="/javascript/userType.js"></script>
    <script src="/javascript/images.js"></script>

</body>
<a href="https://icons8.com/icon/N3ft0cEVp9ui/visible">Visible icon by Icons8</a>

</html>