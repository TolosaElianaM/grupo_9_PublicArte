<!DOCTYPE html>
<html lang="en">
    <!-- -->
<!-- Head -->
<%- include('../partial/head.ejs') %>

<body class="admin create">

    <!--Header-->
    <%- include('./partials/header.ejs')  %>

    <!--Main-->
    <main>

        <h1>Edición del producto</h1>

        <form action="" class="form">

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="nombre-producto" name="nombre-producto" value="<%= producto.titulo %>" placeholder="name@example.com">
                <label for="nombre-producto">Nombre del producto</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="marca" name="marca" value="<%= producto.marca %>"placeholder="name@example.com">
                <label for="marca">Nombre de la marca</label>
            </div>

            <div class="form-floating">
                <select class="form-select" id="categoria" name="categoria" value="<%= producto.categoria %>" aria-label="Floating label select example">
                    <option>Seleccione una categoria</option>
                    <option value="Vajilla">Vajilla</option>
                    <option value="Deco">Deco</option>
                    <option value="Accesorios">Accesorios</option>
                    <option value="Vestimenta">Vestimenta</option>
                </select>
                <label for="categoria">Categoria del producto</label>
            </div>

            <div class="form-floating">
                <select class="form-select" id="material" name="material" value="<%= producto.material %>" aria-label="Floating label select example">
                    <option >Seleccione un material</option>
                    <option value="Tela">Tela</option>
                    <option value="Ceramica">Ceramica</option>
                    <option value="Metal">Metal</option>
                    <option value="Madera">Madera</option>
                    <option value="Papel">Papel</option>
                    <option value="Cuero">Cuero</option>
                    <option value="Arcilla">Arcilla</option>
                    <option value="Resina">Resina</option>
                    <option value="Mineral">Mineral</option>
                    <option value="Piedra">Piedra</option>
                    <option value="Tejido">Tejido</option>
                    <option value="Yeso">Yeso</option>
                    <option value="Porcelana">Porcelana</option>
                    <option value="Vidrio">Vidrio</option>
                </select>
                <label for="material">Material del producto</label>
            </div>

            <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" id="descripcion"
                    name="descripcion"><%= producto.descripcion %>"</textarea>
                <label for="descripcion">Descripción del producto</label>
            </div>

            <div class="mb-3">
                <label for="imagen" class="form-label">Seleccione la imagen del producto</label>
                <input class="form-control" type="file" id="imagen" name="imagen" value="<%= producto.imagen %>">
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" placeholder="Precio del producto" id="precio" name="precio" value="<%=producto.precio%>">
                <span class="input-group-text">.00</span>
            </div>

            <div class="boton">
                <button type="button" type="submit" class="btn btn-primary">Enviar datos</button>
                <button type="button" type="reset" class="btn btn-secondary">Borrar datos</button>
            </div>

        </form>

    </main>

    <!-- Footer -->
    <%- include('../partial/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous">
    </script>

</body>

</html>