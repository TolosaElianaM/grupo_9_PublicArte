<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('./partial/head') %>

<body class="home">
    <!-- Header -->
    <%- include('./partial/header') %>

    <!-- Main -->
    <div class="container products-wrapper search">
        <div class="row">
            <% if (products.length>0) { %>
            <div class="col-12">
                <h2 class="products-title">Resultados de la búsqueda: <%= busqueda %> </h2>
            </div>
            <% products.forEach(products=> { %>
            <div class="col-12 col-md-6 col-lg-3">
                <section class="product-box">
                    <a href="/products/detail/<%= products.id %> ">
                        <figure>
                            <img src="/img/products/<%= products.images[0].file %>" alt="imagen de producto">
                        </figure>
                        <article>
                            <h2>$<%= products.price %> </h2>
                            <p>
                                <%= products.name %>
                            </p>
                        </article>
                    </a>
                </section>
            </div>
            <% }) %>
            <% }else {%>
            <div class="col-12 sin-producto">
                <h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partial/footer') %>
</body>

</html>